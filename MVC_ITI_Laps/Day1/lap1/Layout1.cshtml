            width: 700px;
            margin: 0 auto
        }

        div#content {
            float: left;
            width: 500px
        }

        div#navigation {
            float: right;
            width: 200px
        }

        div#extra {
            float: right;
            clear: right;
            width: 200px
        }

        div#footer {
            clear: both;
            width: 100%
        }
